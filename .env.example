# ===========================================
# 환경 설정 예시 파일
# 실제 사용시 .env 파일로 복사하고 값을 설정하세요
# ===========================================

# 애플리케이션 환경
NODE_ENV=development
PORT=3000
WEB_PORT=3001

# 데이터베이스 설정
DATABASE_URL="postgresql://postgres:password@localhost:5432/realestate"
REDIS_URL="redis://localhost:6379"

# JWT 보안
JWT_SECRET="your_super_secret_jwt_key_change_this_in_production"
JWT_EXPIRES_IN="7d"

# ===========================================
# 정부 공공 데이터 API (1순위 사용)
# ===========================================

# 국토교통부 실거래가 공개 API
GOV_API_KEY="your_government_api_key_from_data_go_kr"
GOV_API_URL="http://openapi.molit.go.kr/OpenAPI_ToolInstallPackage/service/rest/RTMSOBJSvc"

# 부동산원 API (선택사항)
KREIC_API_KEY=""
KREIC_API_URL=""

# ===========================================
# 제3자 사이트 연동 (법적 허용시에만 활성화)
# 각 사이트의 이용약관을 반드시 확인하세요
# ===========================================

# 네이버 부동산 (기본값: 비활성화)
NAVER_API_ENABLED=false
NAVER_CLIENT_ID=""
NAVER_CLIENT_SECRET=""

# 호갱노노 (기본값: 비활성화)
HOGANGNO_API_ENABLED=false
HOGANGNO_API_KEY=""

# 아실 (기본값: 비활성화)
ASIL_API_ENABLED=false
ASIL_API_TOKEN=""

# ===========================================
# 데이터 수집 설정
# ===========================================

# 수집 주기 (cron 표현식)
DEAL_COLLECTION_CRON="0 2 * * *"  # 매일 새벽 2시
LISTING_COLLECTION_CRON="*/30 * * * *"  # 30분마다 (허용시)

# Rate Limiting (초당 요청 수)
GOV_API_RATE_LIMIT=10
SITE_API_RATE_LIMIT=5

# 수집 범위
DEFAULT_REGION="11"  # 서울특별시
LOOKBACK_DAYS=30     # 30일치 데이터 수집

# ===========================================
# 알림 설정
# ===========================================

# 이메일 알림
EMAIL_ENABLED=false
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@yourdomain.com"

# 웹 푸시 (선택사항)
VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""

# ===========================================
# 외부 서비스
# ===========================================

# 파일 스토리지 (이미지, 차트 등)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-northeast-2"
AWS_S3_BUCKET=""

# 모니터링 (선택사항)
SENTRY_DSN=""
NEWRELIC_LICENSE_KEY=""

# ===========================================
# 보안 설정
# ===========================================

# CORS 허용 도메인
CORS_ORIGINS="http://localhost:3001,https://yourdomain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15분
RATE_LIMIT_MAX_REQUESTS=100   # 15분당 100회

# 세션 보안
SESSION_SECRET="another_super_secret_key_for_sessions"

# ===========================================
# 개발/디버깅
# ===========================================

# 로그 레벨
LOG_LEVEL="info"  # error, warn, info, debug

# 개발 모드 설정
ENABLE_DEBUG_ROUTES=false
MOCK_EXTERNAL_APIS=false

# 데이터베이스 디버깅
DATABASE_LOGGING=false

# ===========================================
# Docker 설정
# ===========================================

# PostgreSQL (docker-compose용)
POSTGRES_DB=realestate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis (docker-compose용)
REDIS_PASSWORD=""